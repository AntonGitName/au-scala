# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Authentication
GET     /login                      controllers.AuthenticationController.login
POST    /login                      controllers.AuthenticationController.authenticate
GET     /logout                     controllers.AuthenticationController.logout
GET     /register                   controllers.AuthenticationController.register
POST    /register                   controllers.AuthenticationController.createAccount

# Event
GET     /create-event                   controllers.EventsController.create
POST    /create-event                   controllers.EventsController.createEvent

# Restricted content
GET     /restricted                 controllers.Restricted.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)